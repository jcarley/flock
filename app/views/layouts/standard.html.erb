<!DOCTYPE html>
<html>
<head>
  <title>Flock</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= yield :head %>
  <%= csrf_meta_tag %>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

  <script type="text/javascript">
    $(function() {
        $(".alert-message").alert();
      });
  </script>

</head>
<body>
  <div class="topbar">
      <div class="fill">
        <div class="container">
          <%= link_to "Flock", new_user_session_path, :class => "brand" %>
          <ul class="nav">
            <li><%= link_to "Sign up", new_user_registration_path %></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="content">
        <div class="row">
          <div class="span10">
            <% flash.each do |key, value| %>
              <div class='alert-message <%= key %>' id='<%= key %>'>
                <a class="close" href="#">Ã—</a>  
                <%= value %>
              </div>
            <% end %>
            <%= yield %>
          </div>
        </div>
      </div>

      <footer>
        <p>&copy; Finish First Software 2011</p>
      </footer>

    </div>
<%= debug(params) if Rails.env.development? %>
</body>
</html>
