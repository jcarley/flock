    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

</head>
<body>

  <div class="topbar">
      <div class="fill">
        <div class="container">
          <a class="brand" href="#">Flock</a>
          <ul class="nav">
            <li class="active"><a href="#">Home</a></li>
          </ul>
          <p class="pull-right">
            <span class="muted">Welcome Guest User!</span>
            <span class="muted">&nbsp;|&nbsp;</span>
            <a href="#">Logout</a>
          </p>
        </div>
      </div>
    </div>

    <div class="container">

      <div class="content">
        <div class="page-header">
          <h1><%= page_heading %></h1>
        </div>
        <div class="row">
          <div class="span10">
            <ul class="tabs">
              <li class="active"><a href="#">MyTime</a></li>
              <li><a href="#">Profile</a></li>
              <li><a href="#">Admin</a></li>
            </ul>
            <%= yield %>
          </div>
        </div>
      </div>

      <footer>
        <p>&copy; Finish First Software 2011</p>
      </footer>

    </div>

</body>
</html>
